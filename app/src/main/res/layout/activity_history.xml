<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="co.tapdatapp.tapandroid.history.HistoryActivity">

    <!-- On initial load, the ProgressBar is visible and the
         GridView is "gone". When the code finishes syncing with the
         server, it will set the ProgressBar to "gone" and the GridView
         to visible, thus providing a loading screen
    -->
    <ProgressBar
        android:layout_gravity="center"
        android:id="@+id/history_progress_bar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        />

     <GridView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnWidth="90dp"
        android:id="@+id/gridView"
        android:layout_gravity="center"
        android:numColumns="3"
        android:verticalSpacing="10dp"
        android:horizontalSpacing="10dp"
        android:stretchMode="columnWidth"
        />

</FrameLayout>
