<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/yapaImageLayout"
    android:background="@color/generic_background"
    android:weightSum="1">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="275dp"
        android:id="@+id/yapaImage"
        android:scaleType="centerCrop"
        android:cropToPadding="false"
        android:adjustViewBounds="true"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/image_sender"
        android:layout_gravity="center_horizontal|left"
        android:layout_weight="0.18"
        android:layout_below="@+id/yapaImage"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/image_description"
        android:layout_weight="0.46"
        android:layout_below="@+id/image_sender"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/image_date"
        android:layout_weight="0.26"
        android:layout_below="@+id/image_description"
        android:layout_alignParentStart="true" />

   <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/full_screen_button"
        android:layout_marginEnd="48dp"
        android:layout_above="@+id/image_description"
        android:layout_alignParentEnd="true"
        android:background="@drawable/expand_button"/>
       

</RelativeLayout>