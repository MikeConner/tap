<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    >


    <TextView
        android:layout_weight="1"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:textStyle="bold"
        android:textSize="140sp"
        android:text="$999"
        android:background="@drawable/pixelated_open_chest"
        android:id="@+id/txtAmount" />

    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="25dp"
        >

        <Button
            style="@style/AppTheme.circular_button"
            android:text="&lt;"
            android:layout_width="48dp"
            android:layout_height="48dp"/>

        <TextView
            android:layout_width="235dp"
            android:layout_height="70dp"
            android:text=" AMOUNT HERE "
            android:textSize="10pt"
            android:textStyle="bold"
            android:textColor="#000000"
            android:gravity="center"
            android:background="@drawable/currency"/>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"></FrameLayout>

        <Button
            style="@style/AppTheme.circular_button"
            android:text="&gt;"
            android:layout_width="48dp"
            android:layout_height="48dp"/>

    </LinearLayout>

    <Button
        style="@style/AppTheme.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/arm"
        android:id="@+id/btnArm"
        android:onClick="armOrSend" />

</LinearLayout>
