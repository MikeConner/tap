<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"

    android:background="@drawable/my_bg">


    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="$1"
        android:id="@+id/txtAmount"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="189dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TAP"
        android:id="@+id/btnWithdraw"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/tapbutton_bg"
        android:onClick="armOrSend" />

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignEnd="@+id/btnWithdraw"
        android:id="@+id/FrameLayout">

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="$5"
            android:id="@+id/btnFive"
            android:background="@drawable/circle"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="#fff"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="46dp"
            android:layout_gravity="center_horizontal|top"
            android:onClick="tapFive"/>

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="$50"
            android:id="@+id/btnFifty"
            android:background="@drawable/circle"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="#fff"
            android:layout_below="@+id/txtAmount"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:layout_gravity="center"
            android:onClick="tapFifty"/>

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="$100"
            android:id="@+id/btnHundred"
            android:background="@drawable/circle"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="#fff"
            android:layout_below="@+id/txtAmount"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:layout_marginRight="55dp"
            android:layout_gravity="right|center_vertical"
            android:onClick="tapHundred"/>

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="-"
            android:id="@+id/btnMinus"
            android:background="@drawable/circlenotnumber"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="#fff"
            android:layout_below="@+id/txtAmount"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="20dp"
            android:layout_gravity="left|center_vertical"
            android:onClick="tapMinus"/>

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="$10"
            android:id="@+id/btnTen"
            android:background="@drawable/circle"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="#fff"
            android:layout_below="@+id/txtAmount"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"
            android:layout_marginRight="55dp"
            android:layout_gravity="right|top"
            android:onClick="tapTen"/>

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="$1"
            android:id="@+id/btnOne"
            android:background="@drawable/circle"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="#fff"
            android:layout_below="@+id/txtAmount"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="55dp"
            android:layout_gravity="left|top"
            android:onClick="tapOne"/>

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="$20"
            android:id="@+id/btnTwenty"
            android:background="@drawable/circle"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="#fff"
            android:layout_below="@+id/txtAmount"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="55dp"
            android:layout_gravity="left|center_vertical"
            android:onClick="tapTwenty"/>

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="+"
            android:id="@+id/btnPlus"
            android:background="@drawable/circlenotnumber"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="#fff"
            android:layout_below="@+id/txtAmount"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            android:layout_marginRight="20dp"
            android:layout_gravity="right|center_vertical"
            android:onClick="tapPlus"/>

    </FrameLayout>

</RelativeLayout>
