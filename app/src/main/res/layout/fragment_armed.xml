<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="co.tapdatapp.tapandroid.ArmedFragment">



    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Getting Ready to TAP TAP TAP"
        android:id="@+id/txtFrag"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="215dp"
        android:layout_height="215dp"
        android:id="@+id/imageYapa"
        android:layout_gravity="center"
        android:layout_below="@+id/txtFrag"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/txtYap"
        android:layout_below="@+id/imageYapa"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
