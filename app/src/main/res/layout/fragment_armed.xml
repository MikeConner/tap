<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="co.tapdatapp.tapandroid.arm.ArmedFragment">



    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Getting Ready to TAP TAP TAP"
        android:id="@+id/txtFrag"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="300dp"
        android:id="@+id/imageYapa"
        android:layout_gravity="center"
        android:src="@drawable/armed_graphic"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/txtYap"
        android:layout_below="@id/imageYapa"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Amount"
        android:id="@+id/txtArmedAmount"
        android:layout_below="@id/txtYap"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textSize="40sp"
        android:textStyle="bold"
        android:gravity="center_horizontal" />

    <Button
        android:visibility="gone"
        android:id="@+id/btnRandomTransaction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Random Transaction"
        android:layout_below="@id/txtArmedAmount" />
</RelativeLayout>
