<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="275dp"
        android:layout_height="275dp"
        android:layout_gravity="center"
        android:layout_marginBottom="60dp"
        android:padding="5dp"
        android:src="@drawable/ic_grid"
        android:background="@drawable/qr_bg"
        android:id="@+id/imgQRCODE"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="EMPTY LOAD ADDRESS"
        android:id="@+id/txtInboundAddy"
        android:textSize="14sp"
        android:textColor="#f7c869"
        android:layout_marginBottom="125dp"
        android:layout_gravity="center_horizontal|bottom"
        android:textAlignment="center"
        android:gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/load_address_text"
        android:id="@+id/load_address"
        android:textSize="9pt"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:textColor="#88605563"
        android:layout_marginBottom="145dp"
        android:layout_gravity="center_horizontal|bottom" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/check_mark"
        android:src="@drawable/check_mark"
        android:background="@drawable/check_mark_bg"
        android:layout_marginBottom="35dp"
        android:layout_gravity="center_horizontal|bottom" />
</FrameLayout>

