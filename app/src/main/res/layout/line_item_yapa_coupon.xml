<?xml version="1.0" encoding="utf-8"?>
<!-- individual line item for tag image reward list, see YapaAdapter -->
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/imageButtonYapaImage"
            android:contentDescription="@string/yapa_coupon_hint"
            android:src="@drawable/loading_square"
            android:scaleType="fitCenter"
            android:layout_width="100dp"
            android:layout_height="100dp"/>

        <LinearLayout android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <include layout="@layout/line_item_yapa_include"/>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>